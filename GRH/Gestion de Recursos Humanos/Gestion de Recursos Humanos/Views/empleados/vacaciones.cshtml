@model IEnumerable<Gestion_de_Recursos_Humanos.Models.vacaciones>

@{
    ViewBag.Title = "vacaciones";
}

<h2 style="text-align:center; margin-top:5%">Registro de Vacaciones</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.empleado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.desde)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.hasta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.correspondiente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.comentarios)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.empleado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.desde)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.hasta)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.correspondiente)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.comentarios)
        </td>
        <td>
            @Html.ActionLink("Editar", "editarVacaciones", new { id=item.Id }) |
           
            @Html.ActionLink("Eliminar", "eliminarVacaciones", new { id=item.Id })
        </td>
    </tr>
}

</table>
<input type="submit" onclick="location.href='@Url.Action("agregarVacaciones", "empleados")'" value="Agregar Empleado a Vacaciones" class="btn btn-primary" style="float:right" />
